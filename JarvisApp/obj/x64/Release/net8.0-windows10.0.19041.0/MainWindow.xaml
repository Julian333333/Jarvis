<Window
    x:Class="JarvisApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="{ThemeResource SystemAccentColor}" Padding="16,12">
            <TextBlock Text="JARVIS AI Assistant" 
                      Style="{StaticResource TitleTextBlockStyle}"
                      Foreground="White"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Padding="24">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Spacing="20" MaxWidth="800" HorizontalAlignment="Center" Margin="0,40,0,40">
                
                <!-- Welcome Card -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="24">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Welcome to JARVIS" 
                                  Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <TextBlock Text="Your intelligent AI assistant powered by Windows 11" 
                                  Style="{StaticResource BodyTextBlockStyle}"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Input Section -->
                <StackPanel Spacing="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:ConnectionId='5' x:Name="InputTextBox"
                                Grid.Column="0"
                                PlaceholderText="Stelle JARVIS eine Frage..."
                                Height="100"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                                              />
                        
                        <StackPanel Grid.Column="1" 
                                   Orientation="Vertical" 
                                   Spacing="8" 
                                   Margin="12,0,0,0">
                            <Button x:ConnectionId='6' x:Name="SendButton"
                                   Content="Senden" 
                                   Style="{StaticResource AccentButtonStyle}"
                                                           
                                   Width="100"/>
                            
                            <Button x:ConnectionId='7' x:Name="VoiceButton"
                                   Content="🎤 Sprache"
                                                            
                                   Width="100"/>
                            
                            <Button x:ConnectionId='8' x:Name="ClearButton"
                                   Content="Löschen"
                                                            
                                   Width="100"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Response Section -->
                <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="24"
                       Height="400">
                    <ScrollViewer x:ConnectionId='3' x:Name="ResponseScrollViewer"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                        <TextBlock x:ConnectionId='4' x:Name="ResponseTextBlock"
                                  Text="Bereit für deine Fragen..."
                                  Style="{StaticResource BodyTextBlockStyle}"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  TextWrapping="Wrap"
                                  IsTextSelectionEnabled="True"/>
                    </ScrollViewer>
                </Border>

                <!-- Status Bar -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Spacing="8" Grid.Column="0">
                        <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                        <TextBlock x:ConnectionId='2' x:Name="StatusTextBlock" 
                                  Text="Ready" 
                                  VerticalAlignment="Center"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                    
                    <TextBlock Text="WinUI 3 • .NET 8" 
                              Grid.Column="2"
                              Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                              VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>

